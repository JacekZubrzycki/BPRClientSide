<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BPRMobileApp.Views.LoginView"
             Shell.PresentationMode="ModalAnimated">
    <ContentPage.Content>
        <StackLayout Padding="10,0,10,0" VerticalOptions="Center">

                <Label Text="Username" TextColor="Black"/>

            <Frame Padding="3" BorderColor="#9ca7b8" CornerRadius="5" BackgroundColor="{Binding UsernameFrameBackgroundColor}">
                <Entry x:Name="UsernameEntry"  BackgroundColor="#9ca7b8" Text="{Binding Username}" ReturnType="Next" Focused="UsernameEntry_Focused"/>
            </Frame>
            
            <Label Text="Password" TextColor="Black"/>
            <Frame Padding="3" BorderColor="#9ca7b8" CornerRadius="5" BackgroundColor="{Binding PasswordFrameBackgroundColor}">
                <Entry x:Name="PasswordEntry" BackgroundColor="#9ca7b8" IsPassword="True" Text="{Binding Password}" Focused="PasswordEntry_Focused"/>
            </Frame>
            <Button VerticalOptions="Center" Text="Login" Command="{Binding LoginCommand}"/>
            <Button VerticalOptions="Center" Text="Register" Command="{Binding RegisterCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
