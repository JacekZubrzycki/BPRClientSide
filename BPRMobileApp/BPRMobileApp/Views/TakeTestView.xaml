<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BPRMobileApp.Views.TakeTestView">
    <ContentPage.Content>
        <StackLayout>
            
            <Label Text="{Binding Question}" TextColor="Black"/>
            <StackLayout>
                <RadioButton  Content="{Binding Option1}" TextColor="Black" IsChecked="{Binding Option1Value}"/>
            </StackLayout>
            <StackLayout>
                <RadioButton  Content="{Binding Option2}" TextColor="Black" IsChecked="{Binding Option2Value}"/>
            </StackLayout>
            <StackLayout>
                <RadioButton  Content="{Binding Option3}" TextColor="Black" IsChecked="{Binding Option3Value}"/>
            </StackLayout>
            <StackLayout>
                <RadioButton  Content="{Binding Option4}" TextColor="Black" IsChecked="{Binding Option4Value}"/>
            </StackLayout>
            <Button Text="{Binding NextButtonText}" Command="{Binding NextButtonClicked}"/>
        </StackLayout>
       

    </ContentPage.Content>
</ContentPage>