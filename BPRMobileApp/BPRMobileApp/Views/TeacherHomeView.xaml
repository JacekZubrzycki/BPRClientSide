<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BPRMobileApp.Views.TeacherHomeView">
    <ContentPage.Content>
        <StackLayout>
            <Frame Padding="3" BorderColor="#173058" CornerRadius="5" BackgroundColor="#173058" VerticalOptions="EndAndExpand" Margin="20,10,20,10">
                <Button Command="{Binding AddNewOffer}" Text="Add new offer" TextColor="White" CornerRadius="3" BackgroundColor="#173058"/>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
